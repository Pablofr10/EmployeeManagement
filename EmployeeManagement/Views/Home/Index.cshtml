@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee Details";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.jpg");

        <div class="card m-3" style="min-width: 18rem; max-width: 30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true"/>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="Details" asp-route-id="@employee.Id"
                   class="btn btn-primary">  View </a>
                <a asp-action="Details" asp-controller="Home" 
                   asp-route-id="@employee.Id"
                   class="btn btn-primary">View</a>
                <a asp-action="edit" asp-controller="Home" 
                   asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-primary">Delete</a>
            </div>

        </div>
    }

</div>
